<h1>New product</h1>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :tagline %><br />
    <%= f.text_field :tagline %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :version_number %><br />
    <%= f.text_field :version_number %>
  </p>
  <p>
    <%= f.label :beta %><br />
    <%= f.check_box :beta %>
  </p>
  <p>
    <%= f.label :download_url %><br />
    <%= f.text_field :download_url %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>
